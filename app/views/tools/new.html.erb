<h1> Enter the required information for Listing a new Tool </h1>
<%= simple_form_for @tool do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :condition %>
  <%= f.input :price %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>