<head>

</head>
<body>
    <div class="container">
    <div>
    <form class="form-inline d-flex justify-content-center">
      <input id="zip" name="zip" type="text" pattern="[0-9]*" placeholder="Location">
      <i class="fas fa-search" aria-hidden="true"></i>
    </form>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <div class="row">
          <% @tools.each do |tool|%>
            <div class="col-6">
              <div class="card">
                  <img class="card-img-top" src="https://images.unsplash.com/photo-1567361808960-dec9cb578182?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1371&q=80" class="rounded" alt="Image">
                  <div class="card-body">
                  <p class="card-text"><%=tool.name%></p>
                  <p class="card-text">$<%=tool.price%></p>
                  <%= link_to "Rent me", tool_path(tool)%>
                  </div>
                </div>
            </div>
          <%end%>
        </div>
      </div>
      <div class="col-sm-12 col-md-6">
          <div id="map"
            style="width: 100%; height: 600px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
      </div>
    </div>
  </div>
  
</body>
