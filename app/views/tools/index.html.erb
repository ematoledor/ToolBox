
<!-- Search form -->
<div>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">ToolBox                        </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="#">My Account <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/tools/new">Create New Listing </a>
        </li>
      </ul>
    </div>
  </nav>

  <form class="form-inline d-flex justify-content-center md-form form-sm mt-0">
    <input id="zip" name="zip" type="text" pattern="[0-9]*" placeholder="Location">
    <i class="fas fa-search" aria-hidden="true"></i>
    <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search"
      aria-label="Search">
  </form>


  <div class="container">
    <div class="row">
      <% @tools.each do |tool|%>
        <div class="col-sm-12 col-md-4 col-xl-2">
          <div class="card">
              <img class="card-img-top">
                <% tool.photos.each do |photo| %>
                  <%= cl_image_tag photo.key, :class => 'imgsize'%>
                <% end %> 
              <div class="card-body">
              <p class="card-text"><%=tool.name%></p>
              <p class="card-text">$<%=tool.price%></p>
              <%= link_to "Rent me", tool_path(tool) %>
              </div>
            </div>
        </div>
      <%end%>
    </div>
    <div class="row">
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
</div>

