<div class="container">
    <h1 class="mt-4">Active Listings</h1>
    <form class="form-inline d-flex justify-content-center md-form form-sm mt-2 mb-3">
      <i class="fas fa-search" aria-hidden="true"></i>
      <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search"
        aria-label="Search">
    </form>
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <div class="row">
        <% @tools.each do |tool|%>
          <div class="col-sm-12 col-md-6">
            <div class="card rounded mb-3">
              <div class="cover-image" style="background-image: url('<%= cl_image_path tool.photos[0].key %>')" ></div>
                <div class="card-body">
                  <p class="card-text"><%=tool.name%></p>
                  <p class="card-text">$<%=tool.price%></p>
                  <%= link_to "Rent me", tool_path(tool) %>
                </div>
            </div>
          </div>  
        <%end%>
        </div>
      </div>
      <div class="col-sm-12 col-md-6">
        <div id="map"
          style="width: 100%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>


