
<!-- Search form -->
<!-- Page Content -->
<div class="container">
  <h1 class="mt-4">Active Listings</h1>
  <p></p>
</div>

  <form class="form-inline d-flex justify-content-center md-form form-sm mt-0">
    <i class="fas fa-search" aria-hidden="true"></i>
    <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search"
      aria-label="Search">
  </form>


  <div class="container">
    <div class="row">
      <% @tools.each do |tool|%>
        <div class="col-sm-12 col-md-4 col-xl-2">
          <div class="card">
              <img class="card-img-top" src="https://images.unsplash.com/photo-1567361808960-dec9cb578182?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1371&q=80" alt="Image">
              <div class="card-body">
              <p class="card-text"><%=tool.name%></p>
              <p class="card-text">$<%=tool.price%></p>
              <%= link_to "Rent me", tool_path(tool) %>
              </div>
            </div>
        </div>
      <%end%>
    </div>
    <div class="row">
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
</div>

