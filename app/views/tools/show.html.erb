
<div class="container">
	<div class="card">
		<div class="container-fliud">
			<div class="wrapper row">
				<div class="preview col-md-6">
					<div class="preview-pic tab-content">
                      <div class="tab-pane active" id="pic-1">
                        <% @tool.photos.each do |photo| %>
                            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
                        <% end %>
                        </div>
					</div>

				</div>
				<div class="details col-md-6">
					<h3 class="product-title"><%= @tool.name %></h3>
					
					<p class="product-description"><%= @tool.description %></p>
					<h4 class="price">Rental price: <span>$<%= @tool.price%> USD</span></h4>
					<p class="product-condition"><%= @tool.condition %></p>
					<div class="action">
						<%= link_to new_tool_rental_path(@tool) do %>
                            <button class="add-to-cart btn btn-dark" type="button">Rent Now</button>
                        <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



